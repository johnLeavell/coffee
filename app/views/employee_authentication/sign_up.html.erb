<h1>Sign up</h1>

<form action="/insert_employee" method="post">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="sign_in_count_box">Sign in count</label>
      
    <input type="text" id="sign_in_count_box" name="query_sign_in_count">
  </div>
         
  <div>
    <label for="current_sign_in_at_box">Current sign in at</label>
      
    <input type="text" id="current_sign_in_at_box" name="query_current_sign_in_at">
  </div>
         
  <div>
    <label for="last_sign_in_at_box">Last sign in at</label>
      
    <input type="text" id="last_sign_in_at_box" name="query_last_sign_in_at">
  </div>
         
  <div>
    <label for="admin_box">Admin</label>
    <input id="admin_box" name="query_admin" type="checkbox">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/employee_sign_in">Sign in</a> instead.
</p>
